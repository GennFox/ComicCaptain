.loading {
  display: block;
  line-height: 3em;
  text-align: center;
}

.loading::before {
  font-family: "iconfont";
  display: inline-block;
  margin-right: 6rpx;
}

.loading.load-icon::before {
  font-size: 32rpx;
}

.loading.load-icon::after {
  display: none;
}

.ab-center {
  display: flex;
  justify-content: center;
  align-items: center;
  flex-wrap: wrap;
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
  z-index: 999;
  border-radius:0;
}

.loading.load-icon.over {
  display: none;
}

.loading.load-modal {
  width: 260rpx;
  height: 260rpx;
  background-color: #fff;
  border-radius: 10rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
  justify-content: center;
  font-size: 28rpx;
  line-height: 2.4em;
}

.loading.load-modal image {
  width: 70rpx;
  height: 70rpx;
}

.cuu-load.cload-modal {
  content: "";
  position: absolute;
  background: #fff;
  border-radius: 50%;
  width: 200rpx;
  height: 200rpx;
  font-size: 10px;
  border-top: 6rpx solid rgba(0, 0, 0, 0.05);
  border-right: 6rpx solid rgba(0, 0, 0, 0.05);
  border-bottom: 6rpx solid rgba(0, 0, 0, 0.05);
  animation: icon-spin 1s infinite linear;
  z-index: -1;
}

.gray-text{
  font-weight: bold;
  color: #ccc;
}

@keyframes icon-spin {
  0% {
    transform: rotate(0);
  }

  100% {
    transform: rotate(359deg);
  }
}

.iconfont-spin {
  animation: icon-spin 2s infinite linear;
  display: inline-block;
}
