/* miniprogram/pages/template/template.wxss */
.comic_card{
  margin:3rpx; 
  width: 32%;
  height: 350rpx;
  border: 2rpx solid gainsboro;
  box-shadow: 5px 10px 20px #e7e7e7;
  display: flex;
  flex-direction: column;
}
.card_image{
  width: 100%;
  height: 80%;
}
.text-group{
  margin: 5rpx 10rpx 5rpx;
  display: flex;
  flex-direction: column;
}
.tag{
  color: darkgrey;
  font-size: 25rpx;
}
.icon_text{
  font-size: 30rpx;
  color: rgb(121, 121, 121);
}