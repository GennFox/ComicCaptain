/* miniprogram/pages/comic/comic_catagory.wxss */
.container{ 
  background-color:#777777;
}
/*上半部分*/
.blur{
  width: 100%;
  height: 60%;
  position: absolute;
  z-index: 0;
  filter: blur(20px);
}
.all_info{
  color: white;
  padding-top: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  width: 100%;
  height: 80%;
  z-index: 1;
}
.left{
  width: 50%;
  display: flex;
  flex-direction: column;
}
.btn-group{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  width: 100%;
  height: 20%;
}
.btn{
  width: 48%;
  margin: 20rpx 0;
  background: rgba(255, 255, 255, 0.3);
  font-size: 30rpx;
  color: white;
  display: flex;
  align-items: center;
  justify-content: center;
}
.cover{
  width: 350rpx;
  height: 500rpx;
  border-radius: 20rpx;
}
.comicInfo{
  width: 40%;
  margin-left: 10rpx;
  display:flex;
  flex-direction: column;
  justify-content: space-around;
  white-space: pre-wrap; /**中文换行**/
  word-wrap: break-word; /**英文换行**/
  font-size: 35rpx;
}
.icon{
  width:50rpx;
  height:50rpx;
  margin-right:10rpx; 
}
.icon0{
  width:50rpx;
  height:50rpx;
}
.icon_text{
  font-size: 30rpx;
  color: rgb(121, 121, 121);
}
.intro{
  width:90%;
  margin:50rpx auto;
}
.title{
  font-size: 40rpx;
  font-weight: 500;
}

/*下半部分*/
/**swiper-tab**/
.swiper-tab{  
    width: 100%;  
    margin: 0 auto;
    text-align: center;  
    line-height: 70rpx;
    border-radius: 50rpx;
    background-color: white;
    z-index: 1;
    }  
.swiper-tab-list{  
    font-size: 30rpx;  
    display: inline-block;  
    width: 50%;  
    color: black;  
}  
.on{ 
    color: #ffbf35;  
    border-bottom: 5rpx solid #ffbf35;
    }  
.swiper-box{ 
  display: block; 
  min-height: 500px; 
  width: 100%; 
  overflow: hidden; 
  margin-top: -30rpx;
}   
swiper-item{
  background-color: white;
}
.catalog{
  width: 100%;
  height: 100%;
  padding-top: 50rpx;
  background-color: white;
  z-index: 1;
}
.headnote{
  width: 85%;
  margin: 0 auto;
  display: flex;
  justify-content: space-between;
  font-size: 35rpx;
  color: #777777;
}
.chapter{
  display: flex;
  flex-flow: row wrap;
  margin: 30rpx 40rpx;
  align-items: center;
}
.num_card{
  width: 200rpx;
  height: 100rpx;
  border: 3rpx solid #e7e7e7;
  border-radius: 20rpx;
  margin: 10rpx;
  justify-content: center;
  align-items: center;
  display: flex;
  flex-direction: row;
}
.lock{
  background-color: #e7e7e7;
  color: #777777;
}
/* 评分弹出框 */
modal{
  width: 200px;
  height: 100px;
  position: absolute;
  margin: 0 auto;
  border: 2rpx solid #e7e7e7;
  text-align: center;
}
/*打星*/
.icon_star{
  width: 60rpx;
  height: 60rpx;
}

/* 评论 */
.name-info{
  display:flex;
  flex-direction:column;
  justify-content:space-around;
  width: 80%;
  white-space: pre-wrap; /**中文换行**/
  word-wrap: break-word; /**英文换行**/
  padding-bottom:20rpx; 
}
.headPortrait{
  background-color: white;
  border-radius:50% ;
  width: 100rpx;
  height: 100rpx;
}
.comment{
  width: 90%;
  display: flex;
  flex-direction: column;
  margin: 0 auto;
}
.comment_title{
  border-top: 5rpx solid #e7e7e7;
  width:  100%;
  padding-top:20rpx;
  font-size: 35rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}
.comment_card{
  padding: 30rpx 0;
  border-bottom: 5rpx solid #e7e7e7;
  display: flex;
  flex-direction: row;
}
.search_box{
  width: 100%;
  padding-top: 30rpx;
  position: fixed;
  bottom: 10rpx;
  border-top:5rpx solid #ffbf358a;
  display: flex;
  flex-direction: row;
  text-align: left;
  align-items: center;
}
input{
  width: 85%;
  min-height: 50rpx;
  border-radius: 10rpx;
  background-color: #faf9f9;
  margin:0 20rpx; 
  color: grey;
  font-size: 30rpx;
}