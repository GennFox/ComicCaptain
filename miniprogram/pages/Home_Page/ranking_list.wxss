/* miniprogram/pages/Home_Page/ranking_list.wxss */
.container{
  padding-top: 30rpx;
}
.update_note{
  text-align: center;
  width: 90%;
  font-size: 35rpx;
  color: rgb(121, 121, 121);
}
.rank_list{
  width: 100%;
  margin: 30rpx auto;
}
.rank_card{
  width: 100%;
  height: 350rpx;
  border: 2rpx solid #e7e7e7;
  display: flex;
  flex-direction: row;
}
.cover{
  width: 35%;
  height: 100%;
}
.comicInfo{
  width: 40%;
  margin-left: 30rpx;
  display:flex;
  flex-direction: column;
  justify-content: center;
  white-space: pre-wrap; /**中文换行**/
  word-wrap: break-word; /**英文换行**/
  font-size: 30rpx;
}
.medal{
  width:20%;
  text-align:center;
}
.icon{
  width:80rpx;
  height:80rpx;
  margin: 50rpx auto;
}
.icon_text{
  margin: 20rpx 5rpx;
  font-size: 35rpx;
  color: rgb(70,70,70);
}
.tag{
  color: grey;
  font-size: 30rpx;
  margin: 5rpx;
}